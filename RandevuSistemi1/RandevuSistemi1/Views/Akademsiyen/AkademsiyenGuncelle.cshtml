@{
    ViewBag.Title = "AkademsiyenGuncelle";
}


@using RandevuSistemi1.Models


<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Akademsiyen Guncelleme Sayfası</h4>
            <form class="form-horizontal style-form" action="/Akademsiyen/AkademsiyenGuncelle" method="post" role="form">
                <input type="hidden" name="AkmId" value="@ViewBag.akm.AkmId" />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Ad</label>
                    <div class="col-sm-10">
                        <input type="text" value="@ViewBag.akm.Ad" class="form-control" placeholder="Akademisyen adı giriniz" name="Ad">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Soyad</label>
                    <div class="col-sm-10">
                        <input type="text" value="@ViewBag.akm.Soyad" class="form-control " placeholder="Akademisyen soyadı giriniz" name="Soyad">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Eposta</label>
                    <div class="col-sm-10">
                        <input type="email" value="@ViewBag.akm.Eposta" class="form-control " placeholder="Akademisyen soyadı giriniz" name="Eposta">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Fakulte</label>
                    <div class="col-sm-10">
                        <select name="FakulteId" class="form-control">
                            @foreach (Fakulteler item in ViewBag.fakulte)
                            {
                                if (@item.FakulteId == @ViewBag.akm.FakulteId)
                                {
                                    <option value="@item.FakulteId" selected>@item.FakulteAd</option>
                                }
                                else
                                {
                                    <option value="@item.FakulteId">@item.FakulteAd</option>
                                }

                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Bolum</label>
                    <div class="col-sm-10">
                        <select name="BolumId" class="form-control">
                            @foreach (Bolumler item in ViewBag.bolum)
                            {
                                if (@item.BolumId == @ViewBag.akm.BolumId)
                                {
                                    <option value="@item.BolumId" selected>@item.BolumAd</option>
                                }
                                else
                                {
                                    <option value="@item.BolumId">@item.BolumAd</option>
                                }

                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Parola</label>
                    <div class="col-sm-10">
                        <input type="text" value="@ViewBag.akm.Parola" class="form-control " placeholder="Parola giriniz" name="Parola">
                    </div>
                </div>
                <button type="submit" class="btn btn-theme ">Kaydet</button>
            </form>
        </div>
    </div>
</div>


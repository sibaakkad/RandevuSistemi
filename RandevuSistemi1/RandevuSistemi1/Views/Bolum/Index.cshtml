@{
    ViewBag.Title = "Index";
}

@using RandevuSistemi1.Models
@model List<Bolumler>

@section head{
    <style>
        .hata {
            color: red;
        }
    </style>
}


<form class="form-horizontal style-form" action="/Bolum/BolumEkle" method="post" role="form">
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal2" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Bölüm Ekle</h4>
                </div>
                <div class="modal-body">
                    <p>Bölüm Adı</p>
                    <input type="text" name="BolumAd" placeholder="Bolum adı giriniz " autocomplete="off" class="form-control placeholder-no-fix">
                </div>
                <div class="modal-body">
                    <p>Fakülte Adı</p>
                    <select name="FakulteId" class="form-control">

                        @foreach (Fakulteler item in ViewBag.fakulte)
                        {
                            <option value="@item.FakulteId">@item.FakulteAd</option>
                        }
                    </select>
                </div>

                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                    <button class="btn btn-theme" type="submit">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section body{

    <div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">Bölüm Sil</h4>
                </div>
                <div class="modal-body">
                    <p class="mesaj"></p>
                    <p class="hata"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-danger BSil">Evet</button>
                </div>
            </div>
        </div>
    </div>

}


<div class="col-md-12 mt">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i>Bölümler</h4><hr><table class="table table-hover">
            <a data-toggle="modal" href="/Content/login.html#myModal2" class="btn btn-round btn-success ">Yeni Bölüm Ekle</a>

            <thead>
                <tr>
                    <th>Fakulte</th>
                    <th>Bölüm</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Bolumler item in Model)
                {
                    <tr>
                        @if (item.Fakulteler == null)
                        {
                            <td></td>
                        }
                        else
                        {
                            <td>@item.Fakulteler.FakulteAd</td>
                        }

                        <td>@item.BolumAd</td>
                        <td><button class="btn btn-danger modalAc" data-id="@item.BolumId" data-bolum="@item.BolumAd" data-toggle="modal" data-target="#myModal">Sil</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/Content/lib/jquery/jquery-1.11.1.min.js"></script>
    <script>
        $(".modalAc").click(function () {
            $(".modal-body>p.hata").html("");
            var fakulteAdi = $(this).data("bolum");
            $(".modal-body>p.mesaj").html(fakulteAdi + " isimli  bölüm silinsin mi?");
            var id = $(this).data("id");
            $(".BSil").data("id", id);
        });

        $(".BSil").click(function () {
            var id = $(this).data("id");
            $.ajax({
                type: "POST",
                url: "/Bolum/BolumSil/" + id,
                success: function (durum) {
                    if (durum == "tamam") {
                        window.location.replace("/Bolum/Index");
                    }
                    else {
                        $(".modal-body>p.hata").html("Hata Oluştu");
                    }
                }

            });
        });

    </script>
}



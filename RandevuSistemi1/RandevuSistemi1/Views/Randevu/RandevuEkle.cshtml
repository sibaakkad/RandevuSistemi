@{
    ViewBag.Title = "RandevuEkle";
}

@using RandevuSistemi1.Models

<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Randevu Talep Sayfası</h4>
            <form class="form-horizontal style-form" action="/Randevu/RandevuEkle/" method="post" role="form">

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Fakülte</label>
                    <div class="col-sm-10">
                        <select name="FakulteId" class="form-control">
                            @foreach (Fakulteler item in ViewBag.fakulte)
                            {
                                <option value="@item.FakulteId">@item.FakulteAd</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Bölüm</label>
                    <div class="col-sm-10">
                        <select name="BolumId" class="form-control">
                            @foreach (Bolumler item in ViewBag.bolum)
                            {
                                <option value="@item.BolumId">@item.BolumAd</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Akademisyen</label>
                    <div class="col-sm-10">
                        <select name="AkmId" class="form-control">
                            @foreach (Akademisyenler item in ViewBag.Akademisyen)
                            {
                                <option value="@item.AkmId">@item.Ad</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tarih</label>
                    <div class="col-sm-10">
                        <select name="Tarih" class="form-control">
                            @foreach (Müsaitlikler item in ViewBag.tarih)
                            {
                                <option value="@item.Tarih">@item.Tarih</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Saat</label>
                    <div class="col-sm-10">
                        <select name="SaatId" class="form-control">
                            @foreach (Saatler item in ViewBag.saat)
                            {
                                <option value="@item.SaatId">@item.Saat</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Konu</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Randevu konusu giriniz" name="Konu">
                    </div>
                </div>
                <input type="hidden" name="AktifMi" value="false" />
                <button type="submit" class="btn btn-theme ">Randevu Talep Et</button>
            </form>
        </div>
    </div>
</div>

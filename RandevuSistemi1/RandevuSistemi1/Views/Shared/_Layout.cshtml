@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>@ViewBag.Title</title>

    <!-- Favicons -->
    <link href="/Content/img/favicon.png" rel="icon">
    <link href="/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet">
    @RenderSection("head", false)
</head>

<body>
    <section id="container" class="sidebar-close sidebar-closed">
        <!-- **********************************************************************************************************************************************************
            TOP BAR CONTENT & NOTIFICATIONS
            *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <!--logo start-->
            <a href="#" class="logo"><b>DASH<span>IO</span></b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- settings start -->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="/Content/index.html#">
                            <i class="fa fa-tasks"></i>
                            <span class="badge bg-theme">4</span>
                        </a>
                        <ul class="dropdown-menu extended tasks-bar">
                            <div class="notify-arrow notify-arrow-green"></div>

                        </ul>
                    </li>
                    <!-- settings end -->
                    <!-- inbox dropdown start-->
                    <li id="header_inbox_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="/Content/index.html#">
                            <i class="fa fa-envelope-o"></i>
                            <span class="badge bg-theme">5</span>
                        </a>
                        <ul class="dropdown-menu extended inbox">
                            <div class="notify-arrow notify-arrow-green"></div>
                        </ul>
                    </li>
                    <!-- inbox dropdown end -->
                    <!-- notification dropdown start-->
                    <li id="header_notification_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="/Content/index.html#">
                            <i class="fa fa-bell-o"></i>
                            <span class="badge bg-warning">7</span>
                        </a>

                    </li>
                    <!-- notification dropdown end -->
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li><a class="logout" href="/Login/Logout">Logout</a></li>
                </ul>
            </div>
        </header>
        <!--header end-->
        <!-- **********************************************************************************************************************************************************
            MAIN SIDEBAR MENU
            *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse " tabindex="5000" style="overflow: hidden; outline: none; margin-left: -210px;">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion" style="display: none;">
                    <p class="centered"><a href=""><img src="" class="img-circle" width="80"></a></p>

                    <h5 class="centered"></h5>
                    @if (User.IsInRole("Ad"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Ogrenci/Index" class="dcjq-parent">
                                <i class="fa fa-book"></i>
                                <span>Öğrenci Ayarları</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("A"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Musaitlik/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Müsaitlik</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Ad"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Fakulte/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Fakulte Ayarları</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Ad"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Bolum/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Bölüm Ayarları</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("A") || User.IsInRole("O"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Randevu/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Randevu Bilgileri</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Ad"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Akademsiyen/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Akademisyen Ayarları</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Ad"))
                    {
                        <li class="sub-menu dcjq-parent-li">
                            <a href="/Admin/Index" class="dcjq-parent">
                                <i class="fa fa-tasks"></i>
                                <span>Admin Ayarları</span>
                                <span class="dcjq-icon"></span>
                            </a>
                        </li>
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!-- **********************************************************************************************************************************************************
            MAIN CONTENT
            *********************************************************************************************************************************************************** -->
        <!--main content start-->

        <section id="main-content" style="margin-left: 0px;">
            <section class="wrapper">
                <div class="row">
                    @RenderBody()
                </div>

            </section>
            <!-- /wrapper -->
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    © Copyrights <strong>Dashio</strong>. All Rights Reserved
                </p>
                <div class="credits">

                    Created with Dashio template by <a href="/Content/https://templatemag.com/">TemplateMag</a>
                </div>

            </div>
        </footer>
        <!--footer end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    @RenderSection("body", false)
    <script src="/Content/lib/jquery/jquery.min.js"></script>
    <script src="/Content/lib/bootstrap/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/lib/jquery.scrollTo.min.js"></script>
    <script src="/Content/lib/jquery.nicescroll.js" type="text/javascript"></script>
    <!--common script for all pages-->
    <script src="/Content/lib/common-scripts.js"></script><div id="ascrail2000" class="nicescroll-rails" style="width: 3px; z-index: auto; background: rgb(64, 64, 64); cursor: default; position: fixed; top: 0px; left: 207px; height: 657px; opacity: 0; display: none;"><div style="position: relative; top: 0px; float: right; width: 3px; height: 0px; background-color: rgb(78, 205, 196); background-clip: padding-box; border-radius: 10px;"></div></div><div id="ascrail2000-hr" class="nicescroll-rails" style="height: 3px; z-index: auto; background: rgb(64, 64, 64); top: 654px; left: 0px; position: fixed; cursor: default; display: none; width: 207px; opacity: 0;"><div style="position: relative; top: 0px; height: 3px; width: 0px; background-color: rgb(78, 205, 196); background-clip: padding-box; border-radius: 10px; left: 0px;"></div></div>
    <!--script for this page-->
    @RenderSection("scripts", false)
</body>
</html>